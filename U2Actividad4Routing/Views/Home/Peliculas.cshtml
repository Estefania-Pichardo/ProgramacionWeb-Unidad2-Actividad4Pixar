@model IEnumerable<U2Actividad4Routing.Models.Pelicula>
@{
    Layout = "_Layout";
}
<header>
    <nav class="menuHorizontal">
        <a href="~/Home/Index">
            <img id="logo" src="~/images/Disney_pixar.png">
        </a>
        <ul>

            <li>
                <a href="~/Home/Index">Inicio</a>
            </li>
            <li  class="selected">
                <a href="~/Peliculas">Películas</a>
            </li>

            <li>
                <a href="~/Cortometrajes">Cortometrajes</a>
            </li>
        </ul>
    </nav>
</header>
<main>

    <div id="pelis">

        @foreach (var pelicula in Model)
        {
            <div>
                <a class="imgPelicula" href="~/Peliculas/@pelicula.Nombre.Replace(" ","-")">
                    <img src="~/images/portadas/@(pelicula.Id)_p.jpg" alt="@pelicula.Nombre">
                </a>
                <div class="nombrePelicula">
                    <p>@pelicula.Nombre</p>
                </div>
            </div>
        }

    </div>

</main>

